<div class="container">
<%= form_with(model: @contact, local: true, url: contacts_path) do |form| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%=t 'occurred', count: @contact.errors.count %></h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contact_name">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "name" %>
  </div>
  <div class="contact_email">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "email@email.com" %>
  </div>
  <div class="contact_content">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control", placeholder: "content" %>
  </div>
  <%= form.submit t: :submit, class: "btn btn-default" %>
<% end %>
</div>
