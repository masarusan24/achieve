<h1 class="title"><%= @user.name %>のページ</h1>
<div class="container">
  <h2>お気に入りブログ</h2>
  <div class="row">
    <% @favorite_blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
        <p>投稿者:<%= blog.user.name %></p>
        <p>作成日時:<%= blog.created_at %></p>
        <%= link_to '詳細画面へ', blog_path(blog.id), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
