<h1 class="title">ユーザ一覧</h1>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-xs-12 col-md-6 user-panel">
        <p><%= user.name %></p>
        <p><%= user.email %></p>
        <div class="user-link">
          <%= link_to '削除する', user_path(user.id), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
