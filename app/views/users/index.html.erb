<h1 class="title"><%=t :user_list %></h1>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-xs-12 col-md-6 user-panel">
        <p><%= user.name %></p>
        <p><%= user.email %></p>
        <div class="user-link">
          <%= link_to t(:detail), user_path(user.name), class: "btn btn-default" %>
          <% if user == current_user %>
            <%= link_to t(:edit), edit_user_path(user.name), class: "btn btn-info" %>
            <%= link_to t(:delete), user_path(user.id), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger" %>
          <% else %>
            <%= link_to t(:edit), '', class: "btn btn-info", disabled: "disabled" %>
            <%= link_to t(:delete), '', class: "btn btn-danger", disabled: "disabled" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
