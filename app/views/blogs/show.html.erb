<h1 class="title">ブログ詳細</h1>
<div class="container">
  <% unless @blog.user == current_user %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入り登録する', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
  <h2>投稿者</h2>
  <p><%= @blog.user.name %></p>
  <h2>タイトル</h2>
  <p><%= @blog.title %></p>
  <h2>内容</h2>
  <p><%= @blog.content %></p>
</div>
