h1.title
  =t '.title'
.container
  .row
    - @blogs.each do |blog|
      .col-xs-12.col-md-6.blog-panel
        h2
          = blog.title
        p
          = blog.content
        p
          =t :author
          | :
          = blog.user.name
        p
          =t :created_at
          | :
          = blog.created_at
        .blog-link
          = link_to t(:detail), blog_path(blog.id), class: "btn btn-default"
          - if blog.user == current_user
            = link_to t(:edit), edit_blog_path(blog.id), class: "btn btn-info"
            = link_to t(:delete), blog_path(blog.id), method: :delete, data: { confirm: t(:confirm_detele) }, class: "btn btn-danger"
          - else
            = link_to t(:edit), '', class: "btn btn-info", disabled: "disabled"
            = link_to t(:delete), '', class: "btn btn-danger", disabled: "disabled"
